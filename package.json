{
  "name": "root",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/utilitywarehouse/customer-ui"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.2",
    "@changesets/cli": "^2.23.1",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.2.6",
    "pinst": "^2.1.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "install:ci": "pnpm i --frozen-lockfile --ignore-scripts",
    "setup": "corepack enable && corepack prepare pnpm@7.5.2 --activate",
    "build": "pnpm run build -r --stream",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "prepublishOnly": "pinst --enable",
    "postpublish": "pinst --disable",
    "format": "pnpm format -r --stream",
    "lint": "pnpm lint -r --stream",
    "lint:ci": "pnpm lint:ci -r --stream",
    "clean": "pnpm run clean -r --stream && rimraf node_modules",
    "new-package": "node ./scripts/new-package.js",
    "storybook:start": "pnpm storybook:start -r --filter *material",
    "changeset": "changeset",
    "ci:version": "changeset version && pnpm i --no-frozen-lockfile --ignore-scripts",
    "ci:publish": "pnpm build && changeset publish"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "pnpm": "^7.5.2"
  }
}
