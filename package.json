{
  "name": "root",
  "private": true,
  "devDependencies": {
    "commitizen": "^4.2.2",
    "husky": "^5.0.6",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "pinst": "^2.1.1",
    "semantic-release": "^17.3.2",
    "semantic-release-monorepo": "^7.0.4"
  },
  "scripts": {
    "postinstall": "husky install",
    "prepublishOnly": "pinst --enable",
    "postpublish": "pinst --disable"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
