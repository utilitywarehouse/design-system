{
  "name": "root",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/utilitywarehouse/design-systems"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.2",
    "@changesets/cli": "^2.23.1",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "@utilitywarehouse/prettier-config": "^0.1.0",
    "eslint": "^8.25.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.2.1",
    "turbo": "^1.3.1",
    "typescript": "^5.0.2"
  },
  "scripts": {
    "setup": "corepack enable && corepack prepare pnpm@7.13.4 --activate",
    "build": "turbo run build",
    "build:storybook": "turbo run --no-cache build:storybook",
    "preinstall": "npx only-allow pnpm",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "clean": "pnpm -r --stream clean && rm -rf node_modules",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "changeset": "changeset",
    "ci:version": "changeset version && pnpm install --no-frozen-lockfile",
    "ci:publish": "pnpm run build && changeset publish",
    "checks": "turbo run lint build"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "pnpm": "^7.13.4"
  },
  "prettier": "@utilitywarehouse/prettier-config"
}
