{
  "name": "@utilitywarehouse/customer-ui-design-tokens",
  "version": "1.0.3",
  "description": "Design Tokens for the UW Customer brand",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist/ && tsc",
    "watch": "pnpm build -- --watch",
    "format": "prettier --write \"./src/**/*.ts\"",
    "lint": "eslint ./src --fix --ext .ts",
    "format:ci": "prettier --list-different \"./src/**/*.ts\"",
    "lint:ci": "eslint ./src --ext .ts",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "pnpm format",
      "pnpm lint"
    ]
  },
  "license": "ISC",
  "publishConfig": {
    "access": "restricted"
  },
  "files": [
    "dist",
    "src"
  ]
}
