{
  "name": "@utilitywarehouse/customer-ui-design-tokens",
  "version": "1.0.0",
  "description": "Design Tokens for the UW Customer brand",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "yarn run clean && tsc",
    "watch": "yarn run build -- --watch",
    "format": "prettier --write \"./src/**/*.ts\"",
    "lint": "eslint ./src --fix --ext .ts",
    "format:ci": "prettier --list-different \"./src/**/*.ts\"",
    "lint:ci": "eslint ./src --ext .ts",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*": [
      "yarn lint",
      "yarn format"
    ]
  },
  "license": "ISC",
  "publishConfig": {
    "access": "restricted"
  },
  "files": [
    "dist",
    "src"
  ]
}
