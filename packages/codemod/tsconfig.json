{
  "compilerOptions": {
    "module": "commonjs",
    "downlevelIteration": true,
    "preserveWatchOutput": true,
    "outDir": "dist",
    "lib": ["es2022"],
    "rootDir":"transforms",
    "composite": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "types": ["node", "jest"]
  },
  "include": ["transforms/**/*.ts"],
  "exclude": ["transforms/**/__test*/**","node_modules"]
}
