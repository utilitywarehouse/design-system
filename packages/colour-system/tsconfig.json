{
  "compilerOptions": {
    "outDir": ".",
    "declarationDir": "types",
    "module": "esnext",
    "target": "ES2019",
    "lib": ["esnext"],
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "include": ["./src"],
  "exclude": [ "dist", "node_modules", "scripts", "templates", "raw" ]
}
