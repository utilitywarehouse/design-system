{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2020",
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "jsx": "react",
    "moduleResolution": "Node",
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "storybook-static"
  ],
  "include": [
    "src/**/*"
  ]
}
