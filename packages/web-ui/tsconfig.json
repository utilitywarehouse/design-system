{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "lib": [
      "DOM",
      "ESNext",
      "DOM.Iterable"
    ],
    "jsx": "react",
    "emitDeclarationOnly": true,
    "typeRoots": [],
    "paths": {
      "react": [
        "./node_modules/@types/react"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "storybook-static"
  ],
  "include": [
    "src/**/*"
  ]
}