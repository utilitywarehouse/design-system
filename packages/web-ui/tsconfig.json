{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2020",
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "jsx": "react",
    "moduleResolution": "bundler",
    "emitDeclarationOnly": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "storybook-static"
  ],
  "include": [
    "src/**/*"
  ]
}
